<div class="cont">
  <div class="form login-form">
    <h2>Welcome</h2>
    <label for="email-login">
      <span>Email</span>
      <input type="text" id="email-login" />
    </label>
    <label for="password-login">
      <span>Password</span>
      <input type="password" id="password-login" />
    </label>
    <p class="forgot-pass">Forgot password?</p>
    <button type="submit" class="submit signin" >Sign In</button>

  </div>
  <div class="sub-cont">
    <div class="img">
      <div class="img__text m--up">

        <h3>Don't have an account? Please Sign up to view, comment and post in our tech blog!<h3>
      </div>
      <div class="img__text m--in">

        <h3>If you already has an account, just sign in.<h3>
      </div>
      <div class="img__btn">
        <span class="m--up">Sign Up</span>
        <span class="m--in">Sign In</span>
      </div>
    </div>
    <div class="form signup-form">
      <h2>Create your Account</h2>
      <label for="name-signup">
        <span>Name</span>
        <input type="text" id="name-signup" />
      </label>
      <label for="email-signup">
        <span>Email</span>
        <input type="text" id="email-signup" />
      </label>
      <label for="password-signup">
        <span>Password</span>
        <input type="password" id="password-signup" />
      </label>
      <button type="submit" class="submit">Sign Up</button>

    </div>
  </div>
</div>

<script src="./js/login.js"></script>
